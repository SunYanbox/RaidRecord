@using SPTarkov.Server.Core.Models.Eft.Common
@using SPTarkov.Server.Core.Models.Eft.Common.Tables
@using SPTarkov.Server.Core.Models.Enums
@using Color = MudBlazor.Color

@inject I18NMgr I18NMgr
@inject DataFormatService DataFormat;
@inject RecordManager RecordManager;


<MudPaper Class="pa-4">
    <MudCard>
        <MudCardContent>
            <MudText>@I18NMgr.WebUILocal.BaseInfo</MudText>
            <MudText Typo="Typo.body2">
                ServerId: @Archive.ServerId
                @I18NMgr.WebUILocal.ArchiveTime: @DataFormat.FromDateTimeSeconds(Archive.CreateTime)
                @I18NMgr.WebUILocal.PlayerNickName: @PlayerData.Info?.Nickname
                @I18NMgr.WebUILocal.PlayerLevel: @PlayerData.Info?.Level
                @I18NMgr.WebUILocal.PlayerId: @Archive.PlayerId
            </MudText>
        </MudCardContent>
    </MudCard>
    <MudCard>
        <MudCardContent>
            <MudText>@I18NMgr.WebUILocal.Link(I18NMgr.WebUILocal.MapName, I18NMgr.WebUILocal.And, I18NMgr.WebUILocal.SurviveTime)</MudText>
            <MudText Typo="Typo.body2">
                @(I18NMgr.WebUILocal.MapName): @DataFormat.GetMapNameLocal(Archive)
                @(I18NMgr.WebUILocal.SurviveTime): @DataFormat.FromTimeSeconds(Archive.Results?.PlayTime ?? 0)
            </MudText>
        </MudCardContent>
    </MudCard>
    <MudCard>
        <MudCardContent>
            <MudText>@I18NMgr.WebUILocal.ArchiveResult</MudText>
            <MudText Typo="Typo.body2">
                @I18NMgr.WebUILocal.Result: @DataFormat.GetResultStr(Archive)
                @I18NMgr.WebUILocal.ExitName: @DataFormat.GetExitName(Archive)
                @I18NMgr.WebUILocal.SurvivorClass: @DataFormat.GetSurvivorClass(Archive)
            </MudText>
        </MudCardContent>
    </MudCard>
    <MudCard>
        <MudCardContent>
            <MudText>@I18NMgr.WebUILocal.EnterArchive</MudText>
            <MudText Typo="Typo.body2">
                @I18NMgr.WebUILocal.EquipmentValue: @Archive.EquipmentValue rub
                @I18NMgr.WebUILocal.SecuredValue: @Archive.SecuredValue rub
                @I18NMgr.WebUILocal.PreRaidValue: @Archive.PreRaidValue rub
            </MudText>
        </MudCardContent>
    </MudCard>
    <MudCard>
        <MudCardContent>
            <MudText>@I18NMgr.WebUILocal.ExitArchive</MudText>
            <MudText Typo="Typo.body2">
                @I18NMgr.WebUILocal.GrossProfit: @Archive.GrossProfit rub
                @I18NMgr.WebUILocal.CombatLoss: @Archive.CombatLosses rub
                @I18NMgr.WebUILocal.NetProfit: @DataFormat.GetNetProfit(Archive) rub
            </MudText>
        </MudCardContent>
    </MudCard>
    <MudCard>
        <MudCardContent>
            <MudText>@I18NMgr.WebUILocal.KillInfo</MudText>
            <MudText Typo="Typo.body2">
                @(I18NMgr.WebUILocal.KillCount): @DataFormat.GetKillCount(Archive)
                @(I18NMgr.WebUILocal.HeadshotRate): @DataFormat.GetHeadshotRate(Archive)
            </MudText>
            @if (DataFormat.GetKillCount(Archive) > 0 && ShowToolZone)
            {
                @if (_showKillAll)
                {
                    <MudTable Items="@GetVictims()" FixedHeader="@true" FixedFooter="@true">
                        <HeaderContent>
                            <MudTh>@I18NMgr.WebUILocal.Time</MudTh>
                            <MudTh>@I18NMgr.WebUILocal.Weapon</MudTh>
                            <MudTh>@I18NMgr.WebUILocal.BodyPart</MudTh>
                            <MudTh>@I18NMgr.WebUILocal.Distance</MudTh>
                            <MudTh>@I18NMgr.WebUILocal.VictimInfo</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd>@DataFormat.GetVictimTime(context)</MudTd>
                            <MudTd>@DataFormat.GetWeaponName(context)</MudTd>
                            <MudTd>@DataFormat.GetBodyPartName(context)</MudTd>
                            <MudTd>@DataFormat.GetDistance(context)</MudTd>
                            <MudTd>@($"{context.Name}(Lv{context.Level} side: {context.Side} role: {DataFormat.GetRoleName(context)})")</MudTd>
                        </RowTemplate>
                        <PagerContent>
                            <MudTablePager PageSizeOptions="new[] { 10, 30 }"/>
                        </PagerContent>
                    </MudTable>
                }
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => OnShowKillAllClick())">
                        @(_showKillAll ? I18NMgr.WebUILocal.Link(I18NMgr.WebUILocal.Collapse, I18NMgr.WebUILocal.KillInfo) : I18NMgr.WebUILocal.Link(I18NMgr.WebUILocal.Expand, I18NMgr.WebUILocal.KillInfo))
                    </MudButton>
                </MudCardActions>
            }
            @if (Archive.Results?.Result == ExitStatus.KILLED)
            {
                Aggressor? aggressor = Archive.EftStats?.Aggressor;
                if (aggressor != null)
                {
                    <MudCard>
                        <MudCardContent>
                            <MudText>@I18NMgr.WebUILocal.AggressorInfo</MudText>
                            <MudText Typo="Typo.body2">
                                @I18NMgr.WebUILocal.Name: @aggressor.Name
                                @I18NMgr.WebUILocal.Side: @aggressor.Side
                                @I18NMgr.WebUILocal.Link(I18NMgr.WebUILocal.Weapon, I18NMgr.WebUILocal.Name): @DataFormat.GetWeaponName(aggressor)
                                @I18NMgr.WebUILocal.Role: @DataFormat.GetRoleName(aggressor)
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                }
                else
                {
                    <MudText>@I18NMgr.WebUILocal.AggressorInfoLoadFail</MudText>
                }
            }
        </MudCardContent>
    </MudCard>

    @if (ShowToolZone)
    {
        <MudCard>
            <QuickEquipmentWidget Archive="Archive" ProvideQuickBuy="@true"/>
        </MudCard>

        <MudCard>
            <ItemsShowWidget Archive="Archive"/>
        </MudCard>
    }

    @code
    {
        PmcData PlayerData => RecordManager.GetPmcDataByPlayerId(Archive.PlayerId);

        bool _showKillAll;

        private void OnShowKillAllClick()
        {
            _showKillAll = !_showKillAll;
        }
    }
</MudPaper>

@code {
    [Parameter]
    public required RaidArchive Archive { get; set; }

    [Parameter] public bool ShowToolZone { get; set; } = true;

    public List<Victim> GetVictims() => Archive.EftStats?.Victims?.ToList() ?? [];
}