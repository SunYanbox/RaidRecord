@using SPTarkov.Server.Core.Models.Eft.Profile

@inject I18NMgr I18NMgr

<MudCard>
    <MudCardContent Class="curt-profile-card-context">
        <MudText>@I18NMgr.WebUILocal.Link(I18NMgr.WebUILocal.Curr, I18NMgr.WebUILocal.Profile, I18NMgr.WebUILocal.Info)</MudText>
        @if (SptProfile is null)
        {
            <MudProgressCircular Color="Color.Default" Indeterminate="true"/>
        }
        else
        {
            <MudText Typo="Typo.body2">Aid: @SptProfile.ProfileInfo?.Aid</MudText>
            <MudText Typo="Typo.body2">@I18NMgr.WebUILocal.Name: @SptProfile.ProfileInfo?.Username</MudText>
            <MudText Typo="Typo.body2">PMC Id: @SptProfile.ProfileInfo?.ProfileId</MudText>
            <MudText Typo="Typo.body2">Scav Id: @SptProfile.ProfileInfo?.ScavengerId</MudText>

            <MudContainer Style="display: flex;margin-top: 16px;">
                <SptInfoMudCard SptProfile="@SptProfile"/>
                <BotProfileInfoCard SptProfile="@SptProfile" Style="margin-left: 8px;"/>
            </MudContainer>
        }
    </MudCardContent>
    <style>
        .curt-profile-card-context {
            border: 2px solid #ccc;
        }
    </style>
</MudCard>

@code {
    [Parameter]
    public SptProfile? SptProfile { get; set; }
}